                      selectedWallet={selectedWallet}
                      walletMap={walletMap}
                      walletAddresses={formData.walletAddresses}
                      walletNames={formData.walletNames}
                      onWalletSelect={setSelectedWallet}
                      loading={loading}
                      batchProgress={batchProgress}
                    />
